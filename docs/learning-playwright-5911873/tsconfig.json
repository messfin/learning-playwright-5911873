{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@fixtures/*": ["fixtures/*"],
      "@pages/*": ["pages/*"],
      "@helpers/*": ["helpers/*"],
      "@datafactory/*": ["datafactory/*"]
    }
  },
  "include": [
    "pages/**/*.ts",
    "tests/**/*.ts",
    "fixtures/**/*.ts",
    "playwright.config.ts",
    "package.json"
  ],
  "exclude": ["node_modules", "playwright-report", "**/*.spec.ts.snap"]
}
